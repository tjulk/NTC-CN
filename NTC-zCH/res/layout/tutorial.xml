<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_bg"
    android:orientation="vertical" >
    
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:drawableLeft="@drawable/ic_nav_hangouts"
	    android:drawablePadding="10dip"
	    android:paddingLeft="5dip"
	    android:paddingRight="3dip"
	    android:paddingTop="15dip"
	    android:paddingBottom="10dip"
	    android:lines="2"
	    android:textSize="16dip"
	    android:text="这里提供不同的教程，让您随心所欲的选择  -->  ENJOY YOURSELF"
	    android:gravity="center_vertical"
	    />

    <LinearLayout
        android:id="@+id/getlean_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瘦身"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高强度练习直至瘦身"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gettoned_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肌肉"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重较轻，完成训练以增加肌肉"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/getstrong_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强壮"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过训练增强体质"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/getfocused_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="局部"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="针对特定部位的15分钟训练"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>