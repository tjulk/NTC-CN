<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_bar_bg"
    android:orientation="vertical" >
    
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:drawableLeft="@drawable/ic_nav_communities"
	    android:drawablePadding="10dip"
	    android:paddingLeft="5dip"
	    android:paddingRight="3dip"
	    android:paddingTop="15dip"
	    android:paddingBottom="10dip"
	    android:lines="2"
	    android:textSize="16dip"
	    android:text="不同的级别，初次使用建议使用初级 PLEASE CHOOSE THE PRIMARY LEVEL"
	    android:gravity="center_vertical"
	    />

    <LinearLayout
        android:id="@+id/primary_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初级"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个月平均完成4-5个教程"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中级"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一周平均完成2-3个教程"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/high_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_tacos"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级"
            android:textSize="26dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一周平均完成3-5+个教程"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

 
    </LinearLayout>

</LinearLayout>